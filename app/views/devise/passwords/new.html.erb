<% provide(:title, 'Forgotten password') %>

<div class="pretty_form">
  <div class="pretty_form--sibling">
    <h1>Forgotten password</h1>
  </div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="pretty_form--row">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
      </div>

      <div class="pretty_form--row">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

    <div class="pretty_form--actions">
      <%= f.submit "Send me reset password instructions", class: "pretty_form--submit_button"  %>
    </div>
  <% end %>

  <div class="pretty_form--sibling">
    <hr />
    <%= render "devise/shared/links" %>
  </div>
</div>
