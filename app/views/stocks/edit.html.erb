<% provide(:title, "Editing your stock of #{@current_ingredient.name}") %>

<%= react_component("AddOrEditStock", {
	cupboardId: @cupboard_id,
	cupboardName: @cupboard_name,
	ingredients: @ingredients,
	units: @units,
	csrfToken: form_authenticity_token,
	stockData: {
		id: @stock.id,
		ingredientName: @stock.ingredient.name,
		amount: round_if_whole(@stock.amount),
		unitId: @stock.unit_id,
		useByDate: @stock.use_by_date
	}
}) %>
