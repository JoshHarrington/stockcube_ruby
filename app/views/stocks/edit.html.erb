<h1><%= @current_ingredient.name %></h1>
<%= form_for @stock, :validate => true do |s| %>
	<div class="field">
		<%= s.label :stock %><br>

		Amount <%= s.text_field(:amount, validate: true) %><br>
		Use by Date <%= s.date_field :use_by_date, min: Date.current, value: @stock.use_by_date, validate: true %>

		<br>
		<br>

		Units <%= select_tag "unit_number", options_from_collection_for_select(@units_select, "unit_number", "name") %>

		<%= select_tag :cupboard_id, options_from_collection_for_select(@cupboards, "id", "location", @current_cupboard) %>

	</div>
	<div class="actions">
		<%= s.submit "Save" %>
	</div>
<% end %>

