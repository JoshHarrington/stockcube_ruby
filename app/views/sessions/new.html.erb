<% provide(:title, "Log in") %>
<div class="pretty_form">
  <div class="pretty_form--sibling">
    <h1>Log in</h1>
    <br />
  </div>
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="pretty_form--row">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="pretty_form--row">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= link_to "(forgot password)", new_password_reset_path %>
    </div>

    <div class="pretty_form--row">
      <%= f.check_box :remember_me, class: 'hidden_checkbox' %>
      <%= f.label :remember_me, class: 'fancy_checkbox_label' do %>
        <span>Remember me on this computer</span>
      <% end %>
    </div>

    <div class="pretty_form--sibling">
      <%= button_tag "Log in", class: "pretty_form--submit_button" %>
    </div>
  <% end %>

  <div class="pretty_form--sibling">
    <p>New user? <%= link_to "Sign up :)", signup_path %></p>
  </div>
</div>
