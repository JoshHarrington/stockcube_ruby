<%= form_for(@cupboard) do |c| %>  
	<div class="field"> 
		Label <%= c.label :cupboard %><br> 
		Location <%= c.text_field :location %><br>
	</div>
	<div class="actions"> 
		<%= c.submit "Save" %> 
	</div> 
<% end %>

<% @stocks.each do |stock| %>
	<div class="stock-block">
		<p class="stock"><%= stock.amount %> <%= stock.unit %> of <%= stock.ingredient.name %></p>
		<%= link_to "Update", edit_stock_path(stock) %>
	</div>
<% end %>
