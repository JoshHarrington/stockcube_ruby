<% provide(:title, 'Your cupboards') %>
<div class="main">
  <div class="container">
  <h2>All Cupboards</h2>
    <% @cupboards.each do |cupboard| %>
    <div class="cupboard">
      <h3><%= cupboard.location %></h3>
      <% if cupboard.stocks %>
        <ul>
          <% cupboard.stocks.each do |stock| %>
            <li><p><%= stock.amount %> <%= stock.ingredient.unit.name %> of <%= stock.ingredient.name %></p></li>
          <% end %>
        </ul>
      <% end %>

      <%= link_to "Learn more", cupboard_path(cupboard) %>
    </div>
    <% end %>
  </div>
</div>