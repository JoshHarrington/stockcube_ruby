<% provide(:title, 'Your cupboards') %>
<div class="main">
  <div class="container">
    <%= link_to "Create a new cupboard", cupboards_new_path %>
    <br />
    <hr>
    <br />
    <h2>All Cupboards</h2>
    <div class="list_block--collection">
      <% @cupboards.each do |cupboard| %>
      <div class="cupboard list_block">
        <h3 class="list_block--title"><%= cupboard.location %></h3>
        <% if cupboard.stocks.first %>
          <% cupboard.stocks.order(use_by_date: :asc).each do |stock| %>
            <div class="list_block--item">
              <p><%= stock.amount %> <%= stock.ingredient.unit.name %> of <%= stock.ingredient.name %></p>
              <p><%= use_by_date(stock) %></p>
            </div>
          <% end %>
        <% end %>
        <%= link_to "Add more stock",  stocks_new_path(:cupboard_id => cupboard.id), {:class => "list_block--item list_block--item-new"} %>
      </div>
    <% end %>
    </div>
  </div>
</div>
