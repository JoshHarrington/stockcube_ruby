<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>


    <h2>User's Recipes</h2>
    <% @users_recipes.each do |recipe| %>
      <p><%= recipe.title %></p>
    <% end %>

    <br/>
    <h2>All Recipes</h2>

    <% @all_recipes.each do |recipe| %>
      <p><%= recipe.title %></p>
    <% end %>

  </aside>
</div>