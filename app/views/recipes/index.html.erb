<div class="main">
  <div class="container">
  <h2>All Recipes</h2>
    <% @recipes.each do |recipe| %>
    <div class="recipe">
      <h3><%= recipe.title %></h3>
      <p><% if vegan?(recipe) %>Vegan &check;<% end %></p>
      <p><% if vegetarian?(recipe) %>Vegetarian &check;<% end %></p>
      <p><% if gluten_free?(recipe) %>Gluten Free &check;<% end %></p>
      <p><% if dairy_free?(recipe) %>Dairy Free &check;<% end %></p>
      <p><% if kosher?(recipe) %>kosher &check;<% end %></p>
      <%= link_to "Learn more", recipe_path(recipe) %>
      <% if current_user %>
        <% unless current_user.favourites.include?(recipe) %>
          <%= link_to "favourite", favourite_recipe_path(recipe, type: "favourite"), method: :put %>
        <% else %>
          <%= link_to "unfavourite", favourite_recipe_path(recipe, type: "unfavourite"), method: :put %>
        <% end %>
      <% end %>
    </div>
    <br/>
    <br/>
    <% end %>
  </div>
</div>