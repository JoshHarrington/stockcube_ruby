<% provide(:title, 'Stock Cube Recipes') %>
<div class="main">
  <div class="container">


    <%= form_tag(search_recipe_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Recipes" %>
      <%= submit_tag "Search", :name => nil %>
      <%= button_tag "Reset", type: :reset %>
    <% end %>
    <br />
<br />
    <h2>Your favourited recipes</h2>

    <% @your_recipes_sample.each do |recipe| %>

      <%= render 'recipe_list_partial', recipe: recipe %>

      <br/>
      <br/>
    <% end %>
    <% if @your_recipes_length > 4 %>
      <p>See all <%= link_to "your favourites recipes", favourite_recipes_path %></p>
    <% end %>

    <br />
    <hr>
    <h2>All Recipes</h2>
    <br />
    <br />
    <%= will_paginate(@recipes) %>
    <% @recipes.each do |recipe| %>

      <%= render 'recipe_list_partial', recipe: recipe %>

      <br/>
      <br/>
    <% end %>

    <%= link_to "Search for more recipes", search_recipe_path %>
  </div>
</div>