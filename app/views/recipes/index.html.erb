<div class="main">
  <div class="container">
  <h2>All Recipes</h2>
    <% @recipes.each do |recipe| %>
    <div class="recipe">
      <h3><%= recipe.title %></h3>
      <%= link_to "Learn more", recipe_path(recipe) %>
      <% if current_user %>
        <% unless current_user.favourites.include?(recipe) %>
          <%= link_to "favourite", favourite_recipe_path(recipe, type: "favourite"), method: :put %>
        <% else %>
          <%= link_to "unfavourite", favourite_recipe_path(recipe, type: "unfavourite"), method: :put %>
        <% end %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>