<% provide(:title, "Editing Recipe: #{@recipe.title}") %>


<%= form_for @recipe, :html => {class: 'content_rich--wrapper', id: 'recipe_edit'} do |f| %>
	<%= render 'recipe_form_partial', f: f %>
<% end %>

<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>


<script>
	window.encodedRecipeId = '<%= Hashids.new(ENV['RECIPE_ID_SALT']).encode(@recipe.id) %>'
	window.csrfToken = '<%= form_authenticity_token %>'
</script>
