<%= form_for @shopping_list, html: {class: "form-horizontal"} do |f| %>
	<% for recipe in Recipe.all %>
	<div>
		<% if @recipes.include?(recipe) %>
			<%= check_box_tag "shopping_list[recipes][id][]", recipe.id, {:id => recipe.id} %>
			<%= label_tag "shopping_list[recipes][id][]", recipe.title, {:for => recipe.id} %>
		<% else %>
			<%= check_box_tag "shopping_list[recipes][id][]", recipe.id, nil, {:id => recipe.id} %>
			<%= label_tag "shopping_list[recipes][id][]", recipe.title, {:for => recipe.id} %>
		<% end %>
	</div>
	<% end %>
	<%= f.submit %>
<% end %>
